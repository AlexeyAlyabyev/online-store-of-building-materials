{{ header }}
<section class="brands">

  <div class="wrapper">

		<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				{% if loop.index > 1 %}
					<span> \ </span>
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% else %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endif %}
			{% endfor %}
		</ul>

		<h1 class="block_title">Производители</h1>
  </div>

    <div class="brands_slider mb_adapt">
      <div class="wrapper swiper">
        <div class="swiper-wrapper body">
          {% for brand in brands %}
            <a href="{{ brand.href }}" class="swiper-slide">
              <img src="{{ brand.image }}" alt="{{ brand.name }}">
            </a>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>


</section>

