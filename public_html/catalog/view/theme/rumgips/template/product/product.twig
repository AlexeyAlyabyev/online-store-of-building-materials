    {% if url_video %}
    <div class="product_card__video">
      <iframe class="" src="{{ url_video }}" width="560" height="315" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" ></iframe>
